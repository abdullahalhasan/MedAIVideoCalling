<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/general_background"
    android:orientation="vertical"
    android:paddingStart="@dimen/double_size"
    android:paddingTop="@dimen/double_size"
    android:paddingEnd="@dimen/double_size"
    tools:context=".SOAPActivity">

    <LinearLayout
        android:id="@+id/custom_actionbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:onClick="goBack"
        android:orientation="horizontal"
        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/back_icon_size"
            android:layout_height="@dimen/back_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_icon" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/std_size"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/ic_cancel"
            android:drawablePadding="@dimen/std_size"
            android:elevation="10dp"
            android:paddingStart="@dimen/double_size"
            android:paddingEnd="@dimen/double_size"
            android:text="Cancel"
            android:textSize="@dimen/regularFontSize" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/std_size"

        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/std_size"
        app:cardElevation="@dimen/tiny_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/std_size">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Al Hasan"
                android:textColor="@color/black"
                android:textSize="@dimen/headingFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patientIdTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hasan@example.com"
                android:textColor="@color/black"
                android:textSize="@dimen/brandFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ageGenderTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Male, 27 Yrs"
                android:textColor="@color/black"
                android:textSize="@dimen/primaryFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/divisionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dhaka, Bangladesh"
                android:textColor="@color/black"
                android:textSize="@dimen/primaryFontSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="+8801521200318"
                android:textColor="@color/black"
                android:textSize="@dimen/primaryFontSize"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/std_size"
        android:layout_marginBottom="@dimen/std_size"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/callingMethodCV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/std_size"
            android:layout_weight="1"
