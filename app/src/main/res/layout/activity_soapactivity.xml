                            android:textSize="@dimen/regularFontSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/double_size"
                        android:layout_marginTop="@dimen/tiny_size"
                        android:layout_marginEnd="@dimen/double_size"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center|start"
                            android:text="Temp"
                            android:textColor="@color/secondaryFontColor"
                            android:textSize="@dimen/regularFontSize"
                            android:textStyle="bold" />

